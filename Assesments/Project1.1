import numpy as np
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression

# Given GDP data (Year, GDP in billion USD)
years = np.array([2019, 2020, 2021, 2022, 2023]).reshape(-1, 1)
gdp = np.array([2871, 2675, 3167, 3353, 3550])

# Create & train the Linear Regression model
model = LinearRegression()
model.fit(years, gdp)

# Predict GDP for 2024
year_2024 = np.array([[2024]])
gdp_2024 = model.predict(year_2024)[0]

print(f"Predicted GDP for 2024: {round(gdp_2024)} Billion USD")

# Plot past GDP data & future prediction
plt.scatter(years, gdp, color='blue', label="Actual GDP Data")
plt.plot(years, model.predict(years), color='red', linestyle="--", label="Regression Line")
plt.scatter(2024, gdp_2024, color='green', label=f"Predicted GDP (2024) = {round(gdp_2024)}")

# Graph Labels
plt.xlabel("Year")
plt.ylabel("GDP (Billion USD)")
plt.title("India's GDP Analysis & 2024 Prediction")
plt.legend()
plt.grid(True)

# Show the plot
plt.show()
